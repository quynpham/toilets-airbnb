<div class="index-page">
  <div class="search-results">
    <div class="searchblock">
      <div class="searchbar">
        <%= form_tag toilets_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a toilet"
          %>
        <% end %>
      </div>
      <div class="fixbutton">
        <div class="submit-button">
          <%= button_tag "Submit", type: "submit", class: "magnifier" do %>
            <div class="loupe">
              <i class="fas fa-search"></i>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <br>
    <h2>Toilets in the area</h2>
    <div class="toilet-index-container text-decoration">
      <div class="cards-index">
        <% @toilets.each do |toilet| %>
          <hr class="line">
          <div class="card-index">
            <div class="picture">
            </div>
            <div class="card-info">
              <div class="titleandlocation">
                <h4 class="card-title"><%= link_to toilet.name, toilet_path(toilet) %></h4>
                <h3 class="card-location"><%= toilet.location %></h3>
              </div>
              <%# <hr class="inside-line"> %>
              <p>"<%= toilet.description %>"</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="map"
      style="width: 40%; height: 800px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
