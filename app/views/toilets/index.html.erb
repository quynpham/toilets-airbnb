
<div class="banner button">
  <h1>Easily find the best toilet in town!</h1>
  <%= link_to "create a toilet", new_toilet_path %>
</div>
<div class="toilet-index-container text-decoration">
  <h2>Available toilets:</h2>
  <div class="cards-index">
    <% @toilets.each do |toilet| %>
    <div class="card-index">
      <h4><%= link_to toilet.name, toilet_path(toilet) %></h4>
      <p>"<%= toilet.description %>"</p>
    </div>
    <% end %>
  </div>
</div>
