<div class="index-page">
  <div class="search-results">
    <div class="searchblock">
      <div class="searchbar">
        <%= form_tag toilets_path, method: :get do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a toilet"
          %>
        <% end %>
      </div>
      <div class="submit-button">
        <%= button_tag "Submit", type: "submit", class: "magnifier" do %>
          <i class="fas fa-search"></i>
        <% end %>
      </div>
    </div>
    <h2>Toilets in the area</h2>
    <br>
    <br>
    <div class="toilet-index-container text-decoration">
      <div class="cards-index">
        <% @toilets.each do |toilet| %>
          <div class="card-index">
            <h4><%= link_to toilet.name, toilet_path(toilet) %></h4>
            <p>"<%= toilet.description %>"</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="map"
      style="width: 40%; height: 800px"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This website is made with <i class="fas fa-poo"></i> at TopLets
  </div>
</div>
