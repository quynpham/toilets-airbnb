<div class= "toilet-container">
  <h2><%= @toilet.name %></h2>
  <ul class ='toilet'>
    <% if @toilet.photos.attached? %>
      <% @toilet.photos.each do |photo| %>
        <li><div class='toilet-img' style="background-image: url('<%= cl_image_path photo.key %>')"></div></li>
      <% end %>
    <% end %>
    <div class="toilet-description">
      <li><i class="fas fa-arrow-right"></i><%= @toilet.description %></li>
      <li><i class="fas fa-map-marker"></i><%= @toilet.location %></li>
      <li><i class="fas fa-euro-sign"></i><%= @toilet.price %> euros</li>
      <li><i class="fas fa-paper-plane"></i><%= @toilet.user.email %></li>
    </div>
      <br>
    <li class='btn-grey'><%= link_to "add a booking", new_toilet_booking_path(@toilet) %></li >
  </ul>
  <ul>
    <% if !@reviews.empty? %>
      <h3>Reviews</h3>
      <% @bookings.each do |booking| %>
        <% if booking.review %>
          <li><%= booking.review.comment %> Rating:<%= booking.review.rating %>/10</li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
